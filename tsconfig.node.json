{
  // ========== Node.js 环境 TypeScript 配置 ==========
  // 此配置用于构建工具和配置文件（如 vite.config.ts, eslint.config.ts 等）
  // 这些文件运行在 Node.js 环境中，而不是浏览器环境
  
  // 继承 Node.js 24 的基础配置
  "extends": "@tsconfig/node24/tsconfig.json",
  
  // ========== 包含的文件 ==========
  // 指定哪些文件使用此配置进行类型检查
  "include": [
    "vite.config.*",        // Vite 构建工具配置文件
    "vitest.config.*",      // Vitest 测试框架配置文件
    "cypress.config.*",     // Cypress E2E 测试配置文件
    "nightwatch.conf.*",    // Nightwatch 测试配置文件
    "playwright.config.*",  // Playwright 测试配置文件
    "eslint.config.*"       // ESLint 代码检查配置文件
  ],
  
  "compilerOptions": {
    // 不生成编译输出文件（这些配置文件不需要编译成 JS）
    "noEmit": true,
    
    // TypeScript 增量编译信息文件路径
    // 用于加快后续编译速度
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    
    // ========== 模块系统配置 ==========
    // 使用 ESNext 模块系统（支持最新的 ES 模块特性）
    "module": "ESNext",
    
    // 使用 Bundler 模块解析策略（适配 Vite 等现代打包工具）
    "moduleResolution": "Bundler",
    
    // 包含 Node.js 类型定义，提供 Node.js API 的类型提示
    "types": ["node"]
  }
}
